/**
 * Helper function to count nodes and comments queued for notification
 *
 * @return array
 *   nodes comments
 */
function _notify_count_nodes() {
  $now = REQUEST_TIME;
  $period = variable_get('notify_send_last', $now - variable_get('notify_send', 86400));

  // Fetch all node type authorized by notify settings.
  $ntype = array();
  foreach (node_type_get_types() as $type => $name) {
    if (variable_get(NOTIFY_NODE_TYPE . $type, 0)) {
      $ntype[] = $type;
    }
  }

  // Build query to fetch desired nodes.
  $q = db_select('node', 'n');
  $q->fields('n', array('nid'));
  $q->condition('status', 1);
  if (count($ntype) >= 1) {
    $q->condition('n.type', $ntype, 'IN');
  }
  if (variable_get('notify_include_updates', 1)) {
    $q->condition(db_or()->condition(db_and()->condition('n.created', $period, '>')->condition('n.created', $now, '<='))
                         ->condition(db_and()->condition('n.changed', $period, '>')->condition('n.changed', $now, '<=')));
  }
  else {
    $q->condition('n.created', $period, '>');
    $q->condition('n.created', $now, '<=');
  }
  $q->orderBy('n.created', 'asc');
  $result = $q->execute();
  $nodes = $result->rowCount();

  // Fetch new comments.
  $comments = array();
  if (module_exists('comment')) {
    $q = db_select('comment', 'c');
    $q->join('node', 'n', 'c.nid = n.nid');
    $q->fields('c');
    if (count($ntype) >= 1) {
      $q->condition('n.type', $ntype, 'IN');
    }
    if (variable_get('notify_include_updates', 1)) {
      $q->condition(db_or()->condition(db_and()->condition('c.created', $period, '>')->condition('c.created', $now, '<='))
                           ->condition(db_and()->condition('c.changed', $period, '>')->condition('c.changed', $now, '<=')));
    }
    else {
      $q->condition('c.created', $period, '>');
      $q->condition('c.created', $now, '<=');
    }
    $q->orderBy('c.nid', 'asc');
    $q->orderBy('c.changed', 'asc');
    $cresult = $q->execute();
    $comments = $cresult->rowCount();

  }

  return array($nodes, $comments);
}






/**
 * Compute the next time a notification should be sent.
 * 
 * @param int $send_last
 *   timestamp of last notification
 *
 * @return int
 *   -1 never, 0 send instantly, else next time to notify.
 */
function _notify_next_notificaton($send_last, $reset=0) {
  $send_interval = variable_get('notify_send', 86400);
  if ($send_interval < 0) {
    return(-1);
  }
  $next_last = $next_frst = $send_last + $send_interval;
  $next = variable_get('notify_send_next', 0);
  if (REQUEST_TIME >= $next_frst) {
    return(0);
  }
  // dpm($next);
  if (!$next || $reset) {
    $send_hour  = variable_get('notify_send_hour',  0);


    if ($send_interval >= 86400) {
      $next_last = strtotime(date('Y-m-d ', $next_frst) . $send_hour . ':00:00');
      if ($next_last < REQUEST_TIME) $next_last += 86400;
    }
    variable_set('notify_send_next', $next_last);
    return($next_last);
  }
  return($next);
}


/**
 * Implements hook_cron().
 */
function notify_cron() {
  $now = REQUEST_TIME;
  $last  = variable_get('notify_send_last', 0);
  $next = _notify_next_notificaton($last);
  if ($now > $next) {
    _notify_send($now);
  }
}

