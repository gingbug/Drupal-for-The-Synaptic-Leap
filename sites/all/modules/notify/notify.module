}

/**
 * Implements hook_user_insert().
 */
function notify_user_insert(&$edit, $account, $category) {
  if (isset($edit['notify_decision']) && $edit['notify_decision'] == 1) {
    db_insert('notify')
      ->fields(array(
      'uid' => $account->uid,
      'status' => 1,
      'node' => 1,
      'teasers' => 0,
      'comment' => 0,
    ))
      ->execute();
    $edit['notify_decision'] = NULL;
  }
}

/**
