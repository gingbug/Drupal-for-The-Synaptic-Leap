/**
 * Menu callback, show admin list of user notification settings.
 */
function notify_admin_users($form, &$form_state) {
  $send_last  = variable_get('notify_send_last', 0);
  $next_last = _notify_next_notificaton($send_last);
  $sent = variable_get('notify_num_sent', 0);
  if ($sent == 0) {
    $sent = t('No e-mails were sent');
  }
  elseif ($sent > 0) {
    $sent = t('sent ') . format_plural($sent, '1 e-mail', '@count e-mails');
  }
  else {
    $sent = -$sent;
    $sent = t('sending ') . format_plural($sent, '1 e-mail', '@count e-mails') . t(' failed');
  }

  $last = $send_last ? format_date($send_last, 'short') : t('never.');

  if ($next_last == -1) {
    $batch_msg = t('No more notifications scheduled');
  } elseif ($next_last == 0) {
    $batch_msg = t('the next notification is scheduled for the next cron run');
  }
  else {
    $next = format_date($next_last, 'short');
    $batch_msg = t('The next notification is scheduled for the first cron run after ') . $next;
  }
  $schedule = t('Last notification ran ') . $last . ' (' . $sent . '). ' . $batch_msg . '.';

  $form = array();

  $form['#tree'] = TRUE;
  $form['info'] = array('#value' => t('The following table shows all users that have notifications enabled.'));

  $form['users'] = array();

  // Fetch users with notify enabled.
  $q = db_select('notify', 'n');
  $q->join('users', 'u', 'n.uid = u.uid');
  $q->fields('u', array('uid', 'name', 'mail', 'language'));
  $q->fields('n', array('status', 'node', 'comment', 'attempts', 'teasers'));
  $q->condition('n.status', 1);
  $q->condition('u.status', 1);
  $q->orderBy('u.name');
  $uresult = $q->execute();

  foreach ($uresult as $user) {
    $form['users'][$user->uid] = array();
    $form['users'][$user->uid]['name'] = array(
      '#markup' => theme('username', array('account' => $user)),
    );
    $form['users'][$user->uid]['mail'] = array(
      '#markup' => $user->mail,
    );
    $form['users'][$user->uid]['node'] = array(
      '#type' => 'checkbox',
      '#default_value' => $user->node,
    );
    $form['users'][$user->uid]['teasers'] = array(
      '#type' => 'select',
      '#default_value' => $user->teasers,
      '#options' => array(
        t('Title only'),
        t('Title + Teaser'),
        t('Title + Body'),
        t('Title + Body + Fields'),
      ),
    );
    $form['users'][$user->uid]['comment'] = array(
      '#type' => 'checkbox',
      '#default_value' => $user->comment,
    );
    $form['users'][$user->uid]['attempts'] = array(
      '#type' => 'textfield',
      '#size' => 2,
      '#default_value' => $user->attempts ? intval($user->attempts) : 0,
    );
  }

  $form['flush'] = array(
    '#title' => t('Flush e-mail queue'),
    '#type' => 'checkbox',
    '#default_value' => FALSE,
    '#description' => t('Check to send out any pending notification e-mails currently in queue.'),
  );

  /*
  TODO
  $form['bulk'] = array(
    '#title' => t('Batch subscribe all users'),
    '#type' => 'checkbox',
    '#default_value' => FALSE,
    '#description' => t('Set the master switch for all users to enabled.'),
  );
  */

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save settings / Execute'),
  );

  $form['batch'] = array(
    '#type' => 'fieldset',
    '#title' => t('Status'),
    '#collapsible' => TRUE,
  );

  list ($c_node, $c_comm) = _notify_count_nodes();
  $s_node = format_plural($c_node, '1 node', '@count nodes');
  $s_comm = format_plural($c_comm, '1 comment', '@count comments');

  // $db_next = variable_get('notify_send_next', -13); if ($db_next > 0) $db_next = format_date($db_next, 'short'); // DB

  $form['batch']['schedule'] = array(
    '#markup' => $schedule . '<br/>' . t('Queued for next notificantion are ') . $s_node . ', and ' . $s_comm. '.',
  );

  return $form;
}

/**
 * Submit for the notify_admin_users form.
 */
function notify_admin_users_submit($form, &$form_state) {
  unset($form);

  if (!array_key_exists('users', $form_state['values'])) {
    drupal_set_message('No users have notifications enabled.', 'error');
    return;
  }
  if ($form_state['values']['users']) {
    foreach ($form_state['values']['users'] as $uid => $settings) {
      db_update('notify')
      ->fields(array(
        'node' => $settings['node'],
        'teasers' => $settings['teasers'],
        'comment' => $settings['comment'],
        'attempts' => $settings['attempts'],
      ))
      ->condition('uid', $uid)
      ->execute();
    }
  }
  drupal_set_message(t('Notify settings saved / batch executed.'));

  if ($form_state['values']['flush']) {
    $send_start = REQUEST_TIME;
    list($num_sent, $num_failed) = _notify_send($send_start);

    if ($num_sent > 0) {
      drupal_set_message(t('!count pending notification e-mails have been sent.', array('!count' => $num_sent)));
      variable_set('notify_num_sent', $num_sent);
    }
    elseif ($num_failed > 0) {
      drupal_set_message(t('!count notification e-mails could not be sent.', array('!count' => $num_failed)), 'error');
      variable_set('notify_num_sent', 0-$num_sent);
    }
    else {
      drupal_set_message(t('No notification e-mails needed to be sent.'));
      variable_set('notify_num_sent', 0);
    }
  }

/*
  if ($form_state['values']['bulk']) {
    drupal_set_message(t('Batch subscribe is planned for a future release, but not implemented yet.'));
  }
*/
}

